// 高亮POI  TODO tommorow
$("#highlightPOI").click(function () {
    mapmostUE.highlightPOI("layer1", "location1", {
        color:"#013dfc"
    });
})

// 清除POI高亮
$("#unhighlightPOI").click(function () {
    mapmostUE.unhighlightPOI("layer1", "location1");
})

// 添加POI点击事件监听
$("#setOnPOIClickListener").click(function () {
    mapmostUE.setOnPOIClickListener(function (response) {
        // 图层ID 和POI ID
        let {layerId, poiId} = response;
        // alert(layerId+"中POI" + poiId + "被点击")
        var notyf = new Notyf({
            position:{
                x:'center',
                y:'center'
            }
        });
        notyf.success(layerId+"中POI" + poiId + "被点击")
        if (layerId === 'layer1' && poiId === 'location2'){
            mapmostUE.flyTo({
                "location":[120.66492662820784, 31.319807456550862, 295.591761310642],
                "rotation":[0, -17.07972526550293, 13.139276504516602],
                "time":2
            });
        }
    });
})

// 移除POI点击事件监听
$("#removeOnPOIClickListener").click(function () {
    mapmostUE.removeOnPOIClickListener();
})


// 设置POI展开收缩监听
$("#setOnPOIExpandCollapseListener").click(function () {
    mapmostUE.setOnPOIExpandCollapseListener(function (response) {

        // 图层ID 和POI ID
        let {layerId, poiId, newState} = response;
        // alert(layerId+"中POI" + poiId + newState)
        var notyf = new Notyf({
            position:{
                x:'center',
                y:'center'
            }
        });
        notyf.success(layerId+"中POI" + poiId + newState)
    });
})

// 移除POI展开收缩监听
$("#removeOnPOIExpandCollapseListener").click(function () {
    mapmostUE.removeOnPOIExpandCollapseListener();
})

// 改变POI信息展示的临界距离
$("#setDistanceOfPOIStatusChange").click(function () {
    mapmostUE.setDistanceOfPOIStatusChange({distanceShowAll:50, distanceShowLineOnly:200});
})

// 打开POI渐隐效果
$("#openPOIFadeOut").click(function () {
    mapmostUE.setPOIFadeOutEffect(true);
})

// 关闭POI渐隐效果
$("#closePOIFadeOut").click(function () {
    mapmostUE.setPOIFadeOutEffect(false);
})

// 设置POI渐隐透明度距离
$("#setDistanceOfPOIFadeOutEffect").click(function () {
    let options = {
        "distance": [5000, 25000, 50000],
        "opacity":[1, 0.5, 0.1]
    }
    mapmostUE.setDistanceOfPOIFadeOutEffect(options)
});

// 开启POI避让
$("#openPOIAvoidance").click(function () {
    mapmostUE.setPOIAvoidance(true)
});

// 关闭POI避让
$("#closePOIAvoidance").click(function () {
    mapmostUE.setPOIAvoidance(false)
});
