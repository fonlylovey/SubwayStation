// 隐藏POI
$("#hidePOI").click(function () {
    mapmostUE.setPOIsVisibility("layer1", false)
})

// 显示POI
$("#showPOI").click(function () {
    mapmostUE.setPOIsVisibility("layer1", true)
})

// 移除POI
$("#removePOI").click(function () {
    mapmostUE.removePOIs("layer1")
})

// 更新POI
$("#updatePOIPosition").click(function () {
    mapmostUE.updatePOIs("layer1",
        [{
            id: "location1",             // POI ID （必须要有的属性，值唯一且不为NULL）
            name: "金鸡湖玲珑岛",           // POI 名称 （可选属性，值可为NULL）
            location: [120.675362, 31.318881, 100.177277],
            color: "#ff9900",            // 该类型POI主题色，表现为引线颜色（可选属性）
            iconImage: "http://192.168.34.213:8888/SIPSD/icon/gouwu.png",         // 该类型POI 图标（可选属性）
        }, {
            id: "location2",             // POI ID （必须要有的属性，值唯一且不为NULL）
            name: "春晓别墅",           // POI 名称 （可选属性，值可为NULL）
            location: [120.673454, 31.31862, 13.930321],
            color: "#ff9900",            // 该类型POI主题色，表现为引线颜色（可选属性）
            labelWidth: 300,       // label的宽度 （可选属性）
            tag: "拥挤",                  // POI 标签（可选属性）
            tagColor: "#ff9900",          // POI 标签底色（可选属性）
            iconImage: "http://192.168.34.213:8888/SIPSD/icon/gouwu.png",         // 该类型POI 图标（可选属性）
        }]
    );
})

// POI是否存在
$("#hasLayer").click(function () {
    mapmostUE.hasPOIs("layer1", function (res) {


        // alert(res.hasPOIs)
        if (res.hasPOIs === 'true'){
            var notyf = new Notyf({
                position:{
                    x:'center',
                    y:'center'
                }
            });
            notyf.success('' + res.hasPOIs)
        } else {
            var notyf = new Notyf({
                position:{
                    x:'center',
                    y:'center'
                }
            });
            notyf.error('' + res.hasPOIs)
        }
    })  // 返回布尔值
})



// 显示POI详情并定位
$("#showPOIPopup").click(function () {
    mapmostUE.showPOIContent("layer1", "location1");
})

// 隐藏POI的详情弹窗
$("#hidePOIPopup").click(function () {
    mapmostUE.hidePOIContent("layer1", "location1");
})


